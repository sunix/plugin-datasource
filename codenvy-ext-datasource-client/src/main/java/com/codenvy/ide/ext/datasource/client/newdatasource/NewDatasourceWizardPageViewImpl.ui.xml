<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='res' type='com.codenvy.ide.Resources' />
    <ui:with field='locale' type='com.codenvy.ide.CoreLocalizationConstant' />
    <ui:style>
        .alignLeft {
        	float: left;
        }
        
        .spaceRight {
        	margin-right: 8px;
        }
        
        .title {
        	margin-top: 10px;
        	margin-bottom: 10px;
        }
        
        .questionImage {
        	position: relative;
        	float: left;
        	margin-left: 10px;
        	margin-top: 7px;
        	top: 3px;
        }
        
        .projectNamePosition {
        	position: relative;
        	top: 4px;
        }
        
        .clearLeft {
        	clear: left;
        }
        
        .emptyBorder {
        	border: 0px;
        }
        
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="50">
            <g:FlowPanel addStyleNames="{res.coreCss.line}">
                <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                    <g:west size="130">
                        <g:FlowPanel>
                            <g:Label text="Datasource Name" addStyleNames="{res.coreCss.mainBoldFont}" />
                        </g:FlowPanel>
                    </g:west>
                    <g:center>
                        <g:SimplePanel addStyleNames="{style.spaceRight}">
                            <g:SimplePanel>
                                <g:TextBox width="100%" height="16px" ui:field="datasourceName" />
                            </g:SimplePanel>
                        </g:SimplePanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:FlowPanel>
        </g:north>
        <g:north size="140">
            <g:FlowPanel addStyleNames="{res.coreCss.line}">
                <g:Label text="Choose Database Type" addStyleNames="{style.title} {res.coreCss.mainBoldFont} {style.alignLeft}" />
                <g:Image ui:field="chooseTechnologyTooltip" resource="{res.question}" addStyleNames="{style.questionImage} {res.coreCss.cursorPointer} {style.alignLeft}" />
                <g:SimplePanel ui:field="databasePanel" addStyleNames="{res.coreCss.mainFont} {style.clearLeft} {style.emptyBorder}" />
            </g:FlowPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>